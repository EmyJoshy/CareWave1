<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEAEA"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp"
        tools:ignore="UselessParent">

        <!-- App Name -->

        <!-- Login Text -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="CareWave"
            android:textColor="#3168C8"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="Login"
            android:textColor="#3168C8"
            android:textSize="35sp" />

        <!-- UserName EditText -->
        <EditText
            android:id="@+id/userNameL"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:hint="UserName"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#37837F"
            android:importantForAutofill="no"
            android:inputType="" />

        <!-- Password EditText -->
        <EditText
            android:id="@+id/passwordL"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="#6bfff7"
            android:textColorHint="#37837F"
            android:importantForAutofill="no" />

        <!-- Button layout for Reset, Submit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="25dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Data"
                android:onClick="sendData"
                android:textAllCaps="false"
                android:translationX="1dp"/>

            <!-- Reset Button -->
            <Button
                android:id="@+id/buttonReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textAllCaps="false"
                android:translationX="5dp"/>

            <!-- Submit Button -->
            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textAllCaps="false"
                android:translationX="9dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/signUpLink"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/sign_up_here"
            android:textColor="@color/blue"
            android:textStyle="italic"
            android:clickable="true"
            android:onClick="navigateToSignUpPage"
            android:focusable="true" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>